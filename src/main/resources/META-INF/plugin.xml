<idea-plugin>
    <id>com.gafner.giv</id>
    <name>GBrowser</name>
    <vendor email="jgafner@dorkag.com">Dorkag</vendor>

    <description><![CDATA[
    Embedded Web Browser in a ToolWindow.<br>
    Watch YouTube coding session directly in the IDE<br>
    ]]></description>

    <!-- please see https://www.jetbrains.org/intellij/sdk/docs/basics/getting_started/plugin_compatibility.html
         on how to target different products -->
    <depends>com.intellij.modules.platform</depends>

    <resource-bundle>messages.GBrowserBundle</resource-bundle>

    <extensions defaultExtensionNs="com.intellij">

        <applicationService serviceImplementation="com.github.gbrowser.services.GivServiceSettings"/>
        <projectConfigurable parentId="tools" instance="com.github.gbrowser.settings.ProjectSettingsConfigurable"
                             id="com.github.gbrowser.settings.ProjectSettingsConfigurable"
                             displayName="GBrowser"/>


        <toolWindow id="GBrowser" icon="/icons/gbrowser.svg" anchor="left" canCloseContents="true"
                    factoryClass="com.github.gbrowser.GBrowserToolWindowFactory"/>

    </extensions>

    <actions>
        <group id="GBrowserToolwindowActionGroup">
            <action id="GBrowser.NewTab" class="com.github.gbrowser.ui.toolwindow.actions.GBrowserNewTabAction">
                <keyboard-shortcut first-keystroke="control shift T" keymap="$default"/>
                <keyboard-shortcut first-keystroke="meta T" keymap="Mac OS X" replace-all="true"/>
                <keyboard-shortcut first-keystroke="meta T" keymap="Mac OS X 10.5+" replace-all="true"/>
            </action>
        </group>


    </actions>

</idea-plugin>
